<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.west740.mapper.UserMapper">
    <select id="loadUserByUsername" resultType="com.west740.bean.User">
        SELECT * FROM user WHERE username={username}
    </select>
    <select id="getUserById" resultType="com.west740.bean.User">
        SELECT * FROM user WHERE id={id}
    </select>
    <insert id="register" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user set username=#{username},password=#{password},nickname=#{nickname}
    </insert>
    <delete id="deleteUserById">
        DELETE FROM user WHERE id={id}
    </delete>
</mapper>